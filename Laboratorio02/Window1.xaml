<Window x:Class="Laboratorio02.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio02"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Menu>
            <!-- Opción de Operaciones -->
            <MenuItem Header="Operaciones">
                <MenuItem Header="Ingresos" Click="Ingresos_Click"/>
                <MenuItem Header="Salida" Click="Salida_Click"/>
            </MenuItem>

            <!-- Opción de Mantenimientos -->
            <MenuItem Header="Mantenimientos">
                <MenuItem Header="Conductores" Click="Conductores_Click"/>
                <MenuItem Header="Transportistas" Click="Transportistas_Click"/>
                <MenuItem Header="Camiones" Click="Camiones_Click"/>
                <MenuItem Header="Productos" Click="Productos_Click"/>
            </MenuItem>

            <!-- Opción de Reportes -->
            <MenuItem Header="Reportes">
                <MenuItem Header="Cargas" Click="Cargas_Click"/>
                <MenuItem Header="Ingresos" Click="ReporteIngresos_Click"/>
                <MenuItem Header="Salidas" Click="ReporteSalidas_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
